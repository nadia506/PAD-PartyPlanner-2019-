
import tkinter




# create window
window = tkinter.Tk()
window.title("PAD")
window.geometry("400x400")
window.resizable(False,False)
window.configure(background="pink")





#create label
label1= tkinter.Label(window, text="Party planner", font=("Times",30), fg="skyblue", width=13, height=1)
label1.pack()
label1.place(x=100, y=15)
label1.configure(background="purple")

#create login button
btn1 = tkinter.Button(window, text="Login", fg="purple", width= 5, height= 2 )
btn1.pack()
btn1.place(x=170,y=300)

#creat a cake image
from PIL import Image, ImageTk

image = Image.open("cake.jpg")
photo = ImageTk.PhotoImage(image)




window.mainloop()
